<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sullo.golfapp.YardageFinder">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_lat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="@string/tv_lat_text"
            />
        <TextView
            android:id="@+id/tv_long"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="@string/tv_long_text"
            />

        <Button
            android:id="@+id/firstPoint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="First point" />
        <TextView
            android:id="@+id/tv_lat2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="@string/tv_lat_text"
            />
        <TextView
            android:id="@+id/tv_long2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="@string/tv_long_text"
            />

        <Button
            android:id="@+id/secondPoint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Second point" />

        <TextView
            android:id="@+id/result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="Shot Distance"
            />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
